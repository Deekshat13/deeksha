pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                dir('Flask GET Rest API') {
                    sh 'ls'
                    sh 'docker build -t flask -f Dockerfile .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                    sh "docker login -u deekshatadikamalla@gmail.com -p 'Deeksha@2000>>'"
                    sh 'docker tag flask deekshat13/tdeeksha:flask'
                    sh "docker push deekshat13/tdeeksha:flask"
                }
            }
        stage('Deploy') {
            steps {
                script {
                    // Assuming SSH key authentication is set up
                    sh 'ssh user@192.168.1.161 "docker pull deekshat13/tdeeksha:flask"'
                    sh 'ssh user@192.168.1.161 "docker run -d -p 80:80 --name flask-container deekshat13/tdeeksha:flask"'
                }
            }
        }

        }
}
