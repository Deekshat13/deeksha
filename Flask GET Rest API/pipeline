pipeline {
    agent any
    environment {
        EC2_HOST = '13.49.74.247'
        EC2_USER = 'ubuntu'
    }
    stages {
        stage('Build') {
            steps {
                dir('Flask GET Rest API') {
                    sh 'ls'
                    sh 'docker build -t flask -f Dockerfile .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                sh "docker login -u deekshatadikamalla@gmail.com -p 'Deeksha@2000>>'"
                sh 'docker tag flask deekshat13/tdeeksha:flask'
                sh "docker push deekshat13/tdeeksha:flask"
            }
        }

        stage('Pull Docker Image on EC2') {
            steps {
                script {
                    withCredentials([file(credentialsId: 'pemkey2', variable: 'PRIVATE_KEY_FILE')]) {
                        sh """
                            ssh -i \$PRIVATE_KEY_FILE -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null \$EC2_USER@\$EC2_HOST "docker pull deekshat13/tdeeksha:flask"
                        """
                    }
                }
            }
        }
    }
}

