pipeline {
    agent any
    environment {
        DOCKER_REGISTRY_CREDENTIALS = credentials('Dockerhubcred') 
    }
    stages {
        stage('Build') {
            steps {
                dir('Sample Docker program') {
                    sh 'ls'
                    sh 'docker build -t test -f Dockerfile .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'Dockerhubcred', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    script {
                        def dockerUsername = env.DOCKER_USERNAME
                        def dockerPassword = env.DOCKER_PASSWORD

                        sh '''
                        docker login -u "$dockerUsername" -p "$dockerPassword"
                        docker tag test deekshat13/tdeeksha:test
                        docker push deekshat13/tdeeksha:test
                        '''
                    }
                }
            }
        }
    }
}

